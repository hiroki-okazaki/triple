<div class="col-md-8 offset-md-2 mt-3">
  <div class="user-box">
    <h3 class="text-center">新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control" %>
        </div>
      <div class="form-group">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nick_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "写真" %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group">
        <label><%= f.radio_button :gender, "男性" %> 男性 </label>
        <label><%= f.radio_button :gender, "女性" %> 女性 </label>
      </div>
      <div class="form-group">
          <%= f.label "年齢" %>
          <%= f.number_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label "現住地" %>
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name , { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :profile, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= t(".minimum_password_length", length: @minimum_password_length) %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "パスワード(再確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>