<div class="col-md-8 offset-md-2 mt-3">
  <div class="user-box">
    <h3 class="text-center"><%= "登録情報変更" %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control" %>
        </div>
      <div class="form-group">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nick_name, class: "form-control" %>
      </div>

      <%= image_tag current_registrant.avatar.variant(resize: "200x200") %>

      <div class="form-group">
        <%= f.label "写真" %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group">
        <label><%= f.radio_button :gender, "男性" %> 男性 </label>
        <label><%= f.radio_button :gender, "女性" %> 女性 </label>
      </div>
      <div class="form-group">
        <%= f.label "年齢" %>
        <%= f.number_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "現住地" %>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name , { class: "form-control" } %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label "新しいパスワード (変更しない場合は空白のままにして下さい)" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= t(".minimum_password_length", length: @minimum_password_length) %></em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード(再確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "現在のパスワード" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "変更", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="form-inline mt-2">
      <%= button_to "削除", registration_path(resource_name), data: { confirm: t(".confirm") }, method: :delete, class: "btn btn-warning" %>
      <%= link_to "戻る", :back, class: "btn btn-secondary ml-2" %>
    </div>
  </div>
</div>